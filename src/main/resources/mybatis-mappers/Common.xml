<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Common">
  <resultMap id="Entity" type="Entity">
    <id property="id" column="id"/>
    <result property="ct" column="ct"/>
    <result property="ts" column="ts"/>
    <result property="de" column="de"/>
    <result property="co" column="co"/>
    <result property="uo" column="uo"/>
  </resultMap>

  <sql id="EntityColumns">
    t.id, t.ct, t.ts, t.de, t.co, t.uo
  </sql>

  <sql id="EntityFilter">
    <!-- Entity filter -->
    <if test="filter.id != null">and t.id = #{filter.id}</if>
    <if test="filter.de != null">and t.de = #{filter.de}</if>
  </sql>

  <sql id="EntityUpdateFields">
    <!-- Entity updatable field -->
    <if test="data.co != null">co = #{data.co},</if>
    <if test="data.uo != null">uo = #{data.uo},</if>
    <if test="data.de != null">de = #{data.de},</if>
  </sql>

  <resultMap id="PlatformRelatedEntity" type="PlatformRelatedEntity" extends="Entity">
    <result property="platform" column="platform"/>
  </resultMap>

  <sql id="PlatformRelatedEntityColumns">
    t.platform
  </sql>

  <sql id="PlatformRelatedEntityFilter">
    <!-- PlatformRelatedEntity filter -->
    <if test="filter.platform != null">and t.platform = #{filter.platform}</if>
  </sql>

  <sql id="PlatformRelatedEntityUpdateFields">
    <!-- Entity updatable field -->
    <if test="data.platform != null">platform = #{data.platform},</if>
  </sql>
</mapper>